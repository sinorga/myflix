%section.reset_password.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_for @user, method: 'post', url: reset_password_path(@user.password_reset_token) do |f|
        %header
          %h1 Reset Your Password
        %fieldset.form-group
          .row
            .col-sm-4
              = f.password_field :password, label: "New Password", class: "form-control"
        %fieldset.form-group.action
          = f.submit "Reset Password", class: 'btn btn-default'
