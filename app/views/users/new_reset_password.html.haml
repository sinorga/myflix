%section.reset_password.container
  .row
    .col-sm-10.col-sm-offset-1
      = form_tag reset_password_path do
        %header
          %h1 Reset Your Password
        %fieldset.form-group
          %label New Password
          .row
            .col-sm-4
              = password_field_tag :password, nil, class: "form-control"
              = hidden_field_tag :token, @user.password_reset_token
        %fieldset.form-group.action
          = button_tag "Reset Password", class: 'btn btn-default'
