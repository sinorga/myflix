%section.user.container
  .row
    .col-sm-10.col-sm-offset-1
      %article
        %header
          %img(src="#")
          %h2= "#{@user.full_name}'s video collections (#{@queue_items.count})"
          %button.btn.btn-default Follow
        %table.table
          %thead
            %tr
              %th(width="30%") Video Title
              %th(width="15%") Genre
          %tbody
            - @queue_items.each do |queue_item|
              %tr
                %td
                  = link_to queue_item.video_title, video_path(queue_item.video)
                %td
                  = link_to queue_item.category.name, category_path(queue_item.category)

%section.user_reviews.container
  .row
    .col-sm-10.col-sm-offset-1
      %header
        %h3= "Kevin Wang's Reviews (#{@reviews.count})"
      %ul
        - @reviews.each do |review|
          %article.review
            %li.row
              .col-sm-2
                %p
                  = link_to "\"#{review.video.title}\""
                %col= "Rating: #{review.rating} / 5"
              .col-sm-8
                %p= review.content
