%section.invite.container
  .row
    .col-sm-10.col-sm-offset-1
      %section.invite
        = bootstrap_form_for @invite_user do |f|
          %header
            %h1 Invite a friend to join MyFlix!
          %fieldset
            .row
              .col-sm-4
                = f.text_field :name, label: "Friend's Name"
            .row
              .col-sm-4
                = f.email_field :email, label: "Friend's Email Address"
            .row
              .col-sm-6
                = f.text_area :message, label: "Invitation Message", value: "Please join this really cool site!", rows: 6, control_col: 'col-sm-6'
          %fieldset
            = f.submit "Send Invitation", class: 'btn btn-default'
